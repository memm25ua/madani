            </div>

            <div class="line">
                <p class="word">dise√±o, ia</p>
                <p class="word">&</p>
            </div>

            <div class="line">
                <p class="word">Software</p>
                <p class="word">dev</p>
            </div>

            <div class="line">
                <a
                    id="hero-link-01"
                    href="mailto:madani.devel@gmail.com"
                    target="_blank"
                    rel="noopener"
                    class="word fancy"
                >
                    &#x2192;Email
                </a>

                <a
                    id="hero-link-02"
                    href="https://www.instagram.com/studiomadani/"
                    target="_blank"
                    rel="noopener"
                    class="word fancy"
                >
                    &#x2192;Insta
                </a>
            </div>
        </div>
    </div>
</Layout>

<script>
    // Random number helper
    const rand = (min: number, max: number) =>
        Math.floor(Math.random() * (max - min + 1)) + min;

    // Enhance function, nearly as in the React code.
    function enhance(id: string) {
        console.log("Enhancing element with id:", id);
        const element = document.getElementById(id);
        if (!element) return;
        const text = element.innerText.split("");
        element.innerText = "";

        text.forEach((value, index) => {
            const outer = document.createElement("span");
            outer.className = "outer";

            const inner = document.createElement("span");
            inner.className = "inner";
            inner.style.animationDelay = `${rand(-5000, 0)}ms`;

            const letter = document.createElement("span");
            letter.className = "letter";
            letter.innerText = value;
            letter.style.animationDelay = `${index * 1000}ms`;

            inner.appendChild(letter);
            outer.appendChild(inner);
            element.appendChild(outer);
        });
    }

    enhance("hero-link-01");
    enhance("hero-link-02");
</script>
